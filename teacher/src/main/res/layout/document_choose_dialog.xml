<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/header_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Attach Document"
        android:textColor="@color/White"
        android:textSize="@dimen/message_size_normal"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/device_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_text"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="Attach from Device"
        android:textSize="@dimen/message_size_normal"
        android:textStyle="bold" />

    <View
        android:id="@+id/seprator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/device_option"
        android:background="@color/Gray" />

    <TextView
        android:id="@+id/medvault_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seprator"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="Attach From Medvault"
        android:textSize="@dimen/message_size_normal"
        android:textStyle="bold" />

</RelativeLayout>