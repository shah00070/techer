<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">
    <FrameLayout
        android:id="@+id/fabb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu_labels_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            fab:menu_labels_ellipsize="end"
            fab:menu_colorPressed="#687bc8"
            fab:menu_colorNormal="#687bc8"
            fab:menu_labels_singleLine="true"
            fab:menu_backgroundColor="#cc000000"
            fab:menu_labels_position="left">







            ///




            ///

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/inv_frn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorPressed="#687bc8"
                android:src="@drawable/take_attendence"
                fab:fab_colorNormal="#687bc8"
                fab:fab_size="normal"
                fab:fab_label="Take Attendance" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/attach_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/assign_homeword"
                fab:fab_colorNormal="#687bc8"
                fab:fab_colorPressed="#687bc8"
                fab:fab_size="normal"
                fab:fab_label="Assign Homework" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_bp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circular_notice"
                fab:fab_size="normal"
              android:paddingLeft="-15dp"
                android:paddingTop="-15dp"
                android:paddingRight="-15dp"
                android:paddingBottom="-15dp"

                fab:fab_colorPressed="#687bc8"
                fab:fab_colorNormal="#687bc8"
                fab:fab_label="Circulars"

                />
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/reminder_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorPressed="#687bc8"
                android:src="@drawable/apply_leave"
                fab:fab_colorNormal="#687bc8"
                fab:fab_size="normal"
                fab:fab_label="Add a Note" />
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/task_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorPressed="#687bc8"
                android:src="@drawable/apply_leave"
                fab:fab_colorNormal="#687bc8"
                fab:fab_size="normal"
                fab:fab_label="Assign a Task" /><!--
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/note_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorPressed="#367688"
                android:src="@drawable/apply_leave"
                fab:fab_colorNormal="#367688"
                fab:fab_size="normal"
                fab:fab_label="Add Note" />-->

        </com.github.clans.fab.FloatingActionMenu>
    </FrameLayout>
</merge>
