<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"

    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/round_layout"
        android:orientation="horizontal"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            >

            <TextView
                android:id="@+id/head_class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="VIII"
                android:textSize="30dp"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="58"
            android:weightSum="100">
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"></View>
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="60">

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:text="Total Present:"
                   android:textColor="@color/Black"
                   android:gravity="center"
                   android:textSize="17dp"
                   android:layout_weight="70"/>
               <TextView
                   android:id="@+id/head_class_detail"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:text="20/50"
                   android:textSize="17dp"
                   android:textColor="@color/Black"
                   android:gravity="center|left"
                   android:layout_weight="30"/>
           </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:orientation="vertical"
            android:background="@drawable/round_layout_last"
            android:weightSum="100"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                ></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Details"
                android:layout_weight="40"
                android:textStyle="bold"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:drawableRight="@drawable/arrow_image"
                android:textSize="14dp"
/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"></View>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/main_layout" />
</RelativeLayout>