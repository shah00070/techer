<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"

    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/round_layout"
        android:orientation="horizontal"
        android:weightSum="100">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="73"
            android:weightSum="100">
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="35">
                <TextView
                    android:id="@+id/chatdeciderr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#499eb6"
                    android:text="Presidium School Twitter Page:"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="3dp"
                android:background="#B1BCBE"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="60"
                android:orientation="horizontal"
                android:layout_weight="65">

                <TextView
                    android:id="@+id/socialmedia_n_namee"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Total Present:"
                    android:textColor="@color/Black"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:layout_weight="50"/>
                <TextView
                    android:id="@+id/socialmedia_d_detaillss"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="200"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    android:gravity="center|left"
                    android:layout_weight="10"/>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:orientation="vertical"
            android:background="@drawable/round_layout_last"
            android:weightSum="100"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                ></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Details"
                android:layout_weight="40"
                android:textStyle="bold"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:drawableRight="@drawable/arrow_image"
                android:textSize="14dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"></View>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/main_layout" />
</RelativeLayout>