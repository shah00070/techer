<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/jeev_row_drop_shadow"
    android:padding="8dp" >

    <TextView
        android:id="@+id/package_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Basic"
        android:textSize="@dimen/message_size_normal"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/package_type_name"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <TextView
            android:id="@+id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Basic"
            android:textSize="@dimen/message_size_normal"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_below="@+id/pay_text"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/offer_text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="60"
                android:maxLines="1"
                android:paddingLeft="25dp"
                android:textSize="20dp"
                android:textColor="@color/colorOrange"

                android:text="GET: INR"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/offer_text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2341"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:layout_weight="40"
                android:textColor="@color/colorOrange"
                android:textSize="20dp"
                android:textStyle="bold" />




        </LinearLayout>
<LinearLayout
    android:id="@+id/txt"
    android:layout_width="match_parent"
    android:layout_below="@+id/txt1"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">

    <TextView
        android:id="@+id/get_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
     android:layout_weight="38"
        android:maxLines="1"
        android:paddingLeft="60dp"
        android:textSize="20dp"
        android:text=""
        android:textStyle="bold" />
    <TextView
        android:id="@+id/get_text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2341"
        android:maxLines="1"
        android:layout_weight="62"
        android:textColor="@color/colorOrange"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>


        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:padding="8dp"

            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/message_size_normal"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buy_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_text"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:text="Buy"
            android:textColor="@color/White" />
    </RelativeLayout>

</RelativeLayout>